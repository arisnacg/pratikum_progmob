<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/postingan_user"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_user_round"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/postingan_user_nama"
                        android:text="Gus Arisna"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/postingan_created_at"
                        android:text="1 Jam yang lalu"
                        android:textSize="14sp"
                        android:textColor="#ccc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_postingan"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_marginLeft="10dp"
                        android:id="@+id/btn_edit_post"
                        android:tint="@color/colorPrimaryDarkest"
                        android:src="@drawable/ic_pencil"
                        android:background="#fff"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <ImageButton
                        android:id="@+id/btn_hapus_post"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_delete"
                        android:background="#fff"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/postingan_konten"
                    android:text="Hello World, Ini Postingan pertamax saya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"/>
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/like_section"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btn_like"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="#fff"
                        android:src="@drawable/ic_like"/>
                    <TextView
                        android:id="@+id/postingan_like"
                        android:layout_marginLeft="10dp"
                        android:text="120"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Like"
                        android:textSize="16sp"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="#fff"
                        android:src="@drawable/ic_comment"/>
                    <TextView
                        android:id="@+id/postingan_komentar"
                        android:layout_marginLeft="10dp"
                        android:text="320"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Komentar"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>