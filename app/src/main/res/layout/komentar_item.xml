<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_komentar"
    android:padding="10dp"
    android:layout_marginBottom="6dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/komentar_user_fotoprofil"
        android:src="@mipmap/ic_user_round"
        android:layout_marginTop="4dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#444"
            android:id="@+id/komentar_user"
            android:text="Gus Arisna"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/komentar_isi"
            android:textSize="16dp"
            android:text="Ini adalah komentar saya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableLeft="@drawable/ic_access_time"
            android:drawablePadding="4dp"
            android:layout_marginTop="4dp"
            android:id="@+id/komentar_created_at"
            android:textColor="#999"
            android:textSize="12dp"
            android:text="2 menit yang lalu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
