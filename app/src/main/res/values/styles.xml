<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:colorSecondary">#fff</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/MyOverFlowButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/MyToolbarButtonTint</item>
    </style>

    <style name="MyTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyOverFlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#fff</item>
    </style>

    <style name="MyToolbarButtonTint" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/white</item>
    </style>

</resources>
